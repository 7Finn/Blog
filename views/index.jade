extends layout

block body
  nav.navbar.navbar-default(ng-controller="navCtrl")
    .container
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") Blog
      // Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href="/") 首页
              span.sr-only (current)
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#") {{ currentUsername }}
          li
            a(ng-href="{{ signAdress }}") {{ sign }}

  .container
    div.view-slide-in(ng-view)

  script(src='js/lib/angular/angular.min.js')
  script(src='js/lib/angular/angular-route.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
